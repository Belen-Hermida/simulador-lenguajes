generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Aseg√∫rate de definir esta variable en tu .env
}

model usuarios {
  id         Int          @id @default(autoincrement())
  nombre     String
  correo     String       @unique
  contrasena String

  resultados resultados[]
  historial  historial[]
}

model resultados {
  id           Int       @id @default(autoincrement())
  idioma       String
  calificacion Float
  usuarioid    Int
  usuario      usuarios   @relation(fields: [usuarioid], references: [id])
}

model historial {
  id         Int       @id @default(autoincrement())
  busqueda   String
  respuesta  String
  fecha      DateTime  @default(now())
  usuarioid  Int
  usuario    usuarios   @relation(fields: [usuarioid], references: [id])
}
